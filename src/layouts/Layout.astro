---              
 import Footer from '../components/Footer.astro'
import Nav from '../components/Nav.astro'
import '../styles/global.css'

const {
	title = "ISIR Ghana | Home",
	description = "The Institute for Sustainable and Innovative Research (ISIR Ghana) advances evidence-based solutions in Child & Maternal Health, Education (STEAM), Agriculture, and Climate Change.",
	url = Astro.url.origin,
	image = "",
	imageAlt = "",
	siteName="ISIR Ghana",
	keywords = [
    "ISIR Ghana",
    "Sustainability",
    "Innovation",
    "Research",
    "Maternal Health",
    "STEAM Education",
    "Agriculture",
    "Climate Change",
  ],
	...props
} = Astro.props;

--- 

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href=`${import.meta.env.BASE_URL}/favicon.jpg` />
		<meta name="generator" content={Astro.generator} />
		<link rel="canonical" href={url} />
		<link rel="sitemap" href=`${import.meta.env.BASE_URL}/sitemap-index.xml`> 
		<title>{title}</title>
		<meta name="description" content={description}>
		<meta name="keywords" content={keywords.join(', ')}>

		<!-- Open Graph tags -->
		<meta property="og:title" content={title} />
		<meta property="og:type" content="website" />
		<meta property="og:url" content={url} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content={image}>
		<meta property="og:image:alt" content={imageAlt}>
		<meta property="og:site_name" content={siteName} />

		<!-- Twitter -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={description} />
		<meta name="twitter:image" content={image} />
	</head>
	<body class='relative'>
		<div class='fixed top-0 w-full z-10'>
			<Nav/>
		</div>
		<main class='flex flex-col mt-12 justify-between h-full'>
			<slot />
			<div class=''>
				<Footer />
			</div>
		</main>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
