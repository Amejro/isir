const {id, title,subtitle, target,raised, cover} = Astro.props.project.data;
const { Content } = await render(Astro.props.project);
---

<Layout>	
	<div class='mt-20'>
	
	<article class="prose max-w-3xl mx-auto">
		<h1 class='text-5xl'>{title}</h1>
		<Picture src={cover} formats={['avif', 'webp']} alt={title} />
		<Content />
	</article>
		





	<!-- export const metadata = {
